<div class='form-page'>
    <div class='form-background'><div class='form-container'>
        <div class='main-label'>CREATE ACCOUNT</div>
        <%= form_with model: @user, url: users_path, method: :post do | form | %>
            <div class='<% if @user.errors[:login].present? %>error<% end %>'>
                <%= form.label "Login" %>
                <%= form.text_field :login, placeholder: 'Enter login' %>
                <%= render 'shared/error', model: @user, parametr: :login %>
            </div>
            <div class='<% if @user.errors[:password].present? %>error<% end %>'>
                <%= form.label "Password" %>
                <%= form.password_field :password, placeholder: 'Enter password' %>
                <%= render 'shared/error', model: @user, parametr: :password %>
            </div>
            <div class='<% if @user.errors[:password_confirmation].present? %>error<% end %>'>
                <%= form.label "Confirm password" %>
                <%= form.password_field :password_confirmation, placeholder: 'Confirm password' %>
                <%= render 'shared/error', model: @user, parametr: :password_confirmation %>
            </div>
            <div>
                <%= form.label "Nickname" %>
                <%= form.text_field :nickname, placeholder: 'Enter nickname', value: current_player&.nickname %>
            </div>
            <div class='pare-container'>
                <%= form.submit 'CREATE ACCOUNT', class: 'play-button' %>
            </div>
        <% end %>
        <hr>
        <%= button_to new_sessions_path, method: :get, class: "selection-option" do %>Log in<% end %>
        <%= button_to new_room_path, method: :get, class: "selection-option" do %>Play without account<% end %>
    </div></div>
</div>
